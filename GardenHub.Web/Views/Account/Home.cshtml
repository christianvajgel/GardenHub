@model GardenHub.Domain.Account.Account

@{
    ViewData["Title"] = "Home";
}

<h1>Home</h1>

<div>
    @if (!String.IsNullOrEmpty(Model.Name))
    {
        <h4 class="text-muted" style="text-align:center;">Welcome, @Model.Name! :)</h4>
        <hr />
        <div>
            <div class="card" style="width: 30rem;">
                <img class="card-img-top"
                     src="https://www.smilleodontologia.com.br/media/k2/items/cache/5fa21cd9e0d2531a2f1dfdffbab46f70_XL.jpg"
                     alt="batata doce imagem">
                <div class="card-body">
                    <h5 class="card-title">Batata Doce (orgânica)</h5>
                    <p class="card-text">kg - R$ 10,00</p>
                    <a href="#" class="btn btn-outline-success">Comprar</a>
                </div>
            </div>

            <div class="form-group" style="display: inline-block !important; width: 30rem;">
                <input class="form-control-sm" style="width: 85%;" type="text" placeholder="Comentário..." />
                <a href="#" style="text-align: end !important;" class="btn-sm btn-outline-secondary">Enviar</a>
            </div>
        </div>
    }
</div>